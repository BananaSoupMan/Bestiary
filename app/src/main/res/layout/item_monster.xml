<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_style"
    >

    <TextView
        android:id="@+id/item_name"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:text="TextView"
        style="@style/NameText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlSymmetry" />

    <TextView
        android:id="@+id/item_type"
        style="@style/InfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_danger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/InfoText"
        android:text="@string/danger"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_name"
        app:layout_constraintTop_toBottomOf="@+id/item_type"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/item_danger"
        style="@style/InfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingBottom="5dp"
        android:text="223"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/text_danger"
        app:layout_constraintTop_toBottomOf="@+id/item_type"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>